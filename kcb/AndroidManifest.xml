<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kcbTeam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- uses permission start -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- uses permission end -->

    <application
        android:name="com.kcb.common.application.KApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- common start -->
        <activity
            android:name="com.kcb.common.activity.StartActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- common end -->


        <!-- student start -->
        <activity
            android:name="com.kcb.student.activity.common.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.common.HomeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.StartCheckInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.LookCheckInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.TestActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.common.ModifyPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.LookTestActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
        <activity
            android:name="com.kcb.student.activity.LookTestDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <!-- student end -->


        <!-- teacher start -->
        <activity
            android:name="com.kcb.teacher.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.checkin.StartCheckInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.checkin.LookCheckInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.checkin.LookCheckInDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.TestActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.StuCentreActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.SetTestNameActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.EditTestActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.SetTestTimeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.EditQuestionActivty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.LookTestActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.LookTestDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.CropPictureActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kcb.teacher.activity.ModifyPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <!-- teacher end -->
    </application>

</manifest>