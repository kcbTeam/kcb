<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:fitsSystemWindows="true"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/tch_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_test_name_num"
            style="@style/common_title" />

        <include layout="@layout/comm_button_refresh" />
    </LinearLayout>

    <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar_refresh"
        style="@style/common_title_progressbar"
        android:layout_below="@id/layout_title"
        android:visibility="gone" />

    <com.kcb.common.view.test.ShowQuestionView
        android:id="@+id/questionview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        style="@style/common_bottom_button_layout"
        android:layout_alignParentBottom="true" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_last"
            style="@style/common_bottom_button"
            android:text="@string/tch_last_question"
            buttonflat:clickAfterRipple="false"
            buttonflat:rippleSpeed="28" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_next"
            style="@style/common_bottom_button"
            android:text="@string/tch_next_question"
            buttonflat:clickAfterRipple="false"
            buttonflat:rippleSpeed="28" />
    </LinearLayout>

    <View
        style="@style/common_divider"
        android:layout_above="@id/layout_buttons" />

</RelativeLayout><!-- From: file:/F:/repo/labApps/kcb/kcb/res/layout/tch_activity_look_test_detail.xml -->