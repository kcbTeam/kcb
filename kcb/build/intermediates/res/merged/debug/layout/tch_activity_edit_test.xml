<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/tch_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_title"
            style="@style/common_title" />

        <include layout="@layout/comm_button_finish" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_buttons"
                style="@style/common_bottom_button_layout" >

                <com.kcb.library.view.buttonflat.ButtonFlat
                    android:id="@+id/button_last"
                    style="@style/common_bottom_button"
                    android:text="@string/tch_last_question"
                    widget:clickAfterRipple="false"
                    widget:rippleSpeed="14" />

                <com.kcb.library.view.buttonflat.ButtonFlat
                    android:id="@+id/button_next"
                    style="@style/common_bottom_button"
                    android:text="@string/tch_next_question"
                    widget:clickAfterRipple="false"
                    widget:rippleSpeed="14" />

                <com.kcb.library.view.buttonflat.ButtonFlat
                    android:id="@+id/button_add"
                    style="@style/common_bottom_button"
                    android:text="@string/tch_add_question"
                    widget:clickAfterRipple="false"
                    widget:rippleSpeed="14" />

                <com.kcb.library.view.buttonflat.ButtonFlat
                    android:id="@+id/button_delete"
                    style="@style/common_bottom_button"
                    android:text="@string/tch_delete_question"
                    widget:clickAfterRipple="false"
                    widget:rippleSpeed="14" />
            </LinearLayout>

            <View
                android:id="@+id/view_divider"
                style="@style/common_divider" />

            <com.kcb.common.view.test.EditQuestionView
                android:id="@+id/questioneditview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/F:/repo/labApps/kcb/kcb/res/layout/tch_activity_edit_test.xml -->