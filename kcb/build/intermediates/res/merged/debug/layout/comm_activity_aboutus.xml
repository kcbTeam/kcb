<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/stu_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_appname"
            style="@style/common_title"
            android:text="@string/stu_drawer_aboutus" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textview_version"
        style="@style/common_tip_textview"
        android:layout_below="@id/imageview_logo"
        android:gravity="center" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_copyright"
        android:layout_below="@id/textview_version" >

        <TextView
            android:id="@+id/textview_appinfo"
            style="@style/common_tip_textview"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/comm_appinfo"
            android:textColor="@color/black_700" />
    </ScrollView>

    <TextView
        android:id="@+id/textview_copyright"
        style="@style/common_tip_textview"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/comm_copyright"
        android:textColor="@color/black_500"
        android:textSize="@dimen/text_size_micro" />

</RelativeLayout><!-- From: file:/F:/repo/labApps/kcb/kcb/res/layout/comm_activity_aboutus.xml -->