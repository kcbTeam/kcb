<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:fitsSystemWindows="true"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/tch_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            style="@style/common_title"
            android:text="@string/tch_add_test" />

        <include layout="@layout/comm_button_finish" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/step_tip_margin_top"
        android:background="@drawable/ic_looks_one_grey600_24dp" />

    <TextView
        android:id="@+id/textview_setname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step1"
        android:layout_toRightOf="@id/imageview_step1"
        android:text="@string/tch_set_test_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step1"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_testname"
        style="@style/common_edittext"
        android:layout_below="@id/view_divider1"
        android:hint="@string/tch_set_test_name_hint" />

    <ImageView
        android:id="@+id/imageview_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_testname"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_looks_two_grey600_24dp" />

    <TextView
        android:id="@+id/textview_setnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step2"
        android:layout_toRightOf="@id/imageview_step2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step2"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <com.kcb.library.slider.Slider
        android:id="@+id/slider_testnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edittext_testname"
        android:layout_alignRight="@id/edittext_testname"
        android:layout_below="@id/view_divider2"
        android:layout_marginLeft="-24.5dp"
        android:layout_marginRight="-24.5dp"
        android:background="@color/blue"
        widget:max="9"
        widget:min="1"
        widget:showNumberIndicator="true" />

</RelativeLayout><!-- From: file:/F:/repo/labApps/kcb/kcb/res/layout/tch_activity_set_test_name.xml -->