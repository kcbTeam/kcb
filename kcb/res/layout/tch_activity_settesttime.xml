<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_title"
        android:text="设置测试时间"
        style="@style/common_title_left"
        android:paddingLeft="16dp" />

    <com.kcb.library.view.buttonflat.ButtonFlat
        android:id="@+id/button_finish"
        android:layout_width="@dimen/top_icon_button_width"
        android:layout_height="@dimen/top_icon_button_height"
        android:layout_alignParentRight="true"
        widget:rippleSpeed="6" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_check_circle_black_24dp" />
    </com.kcb.library.view.buttonflat.ButtonFlat>

    <TextView
        android:id="@+id/textview_testtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <com.kcb.library.slider.Slider
        android:id="@+id/slider_testtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_testtime"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        widget:max="10"
        widget:min="2"
        widget:showNumberIndicator="true" />

    <ListView
        android:id="@+id/listview_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider_testtime"
        android:layout_marginTop="8dp"
        android:divider="@color/black_divider"
        android:dividerHeight="16dp" >
    </ListView>

</RelativeLayout>