<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:orientation="horizontal" >

        <include layout="@layout/comm_back_button" />

        <TextView
            android:id="@+id/textview_name_id"
            style="@style/common_title" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_stu_checkinrate"
        style="@style/common_tip"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="8dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_checkinrate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_stu_checkinrate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textview_stu_correctrate"
        style="@style/common_tip"
        android:layout_below="@id/piechart_checkinrate"
        android:layout_marginTop="8dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_correctrate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_stu_correctrate"
        android:layout_centerHorizontal="true" />

</RelativeLayout>