<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/title"
        style="@style/common_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_title"
            style="@style/common_title"
            android:text="@string/tch_crop_picture" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_rotate"
            style="@style/common_title_icon_layout"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="6" >

            <ImageView
                style="@style/common_title_icon"
                android:src="@drawable/ic_rotate_left_black_24dp" />
        </com.kcb.library.view.buttonflat.ButtonFlat>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >

        <com.edmodo.cropper.CropImageView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CropImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_complete"
        style="@style/common_paper_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        widget:paper_text="@string/tch_comm_complete"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

</RelativeLayout>