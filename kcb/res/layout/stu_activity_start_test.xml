<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:fitsSystemWindows="true"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/stu_title_layout" >

        <TextView
            android:id="@+id/textview_test_name_num"
            style="@style/common_title_left" />

        <TextView
            android:id="@+id/textview_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_header_height"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar_refresh"
        style="@style/common_title_progressbar"
        android:layout_below="@id/layout_title"
        android:visibility="gone" />

    <com.kcb.common.view.test.AnswerQuestionView
        android:id="@+id/answerquestionview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_divider"
        android:layout_below="@id/layout_title" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        style="@style/common_bottom_button_layout"
        android:layout_alignParentBottom="true" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_last"
            style="@style/common_bottom_button"
            android:text="@string/stu_last_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="24" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_next"
            style="@style/common_bottom_button"
            android:text="@string/stu_next_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="24" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_submit"
            style="@style/common_bottom_button"
            android:text="@string/stu_submit_answer"
            widget:rippleSpeed="24" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        style="@style/common_divider"
        android:layout_above="@id/layout_buttons" />

</RelativeLayout>