<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="contentDescription" >

    <ImageView
        android:id="@+id/imageview_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/pagerbutton_stu"
        style="@style/common_paper_button"
        android:layout_above="@+id/pagerbutton_tch"
        android:visibility="gone"
        widget:paper_text="@string/i_am_stu" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/pagerbutton_tch"
        style="@style/common_paper_button"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        widget:paper_text="@string/i_am_tch" />

</RelativeLayout>