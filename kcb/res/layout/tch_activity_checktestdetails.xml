<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:orientation="horizontal" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            buttonflat:rippleSpeed="6" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_back" />
        </com.kcb.library.view.buttonflat.ButtonFlat>

        <TextView
            android:id="@+id/textview_testname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp" >

        <TextView
            android:id="@+id/textview_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_question_num"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textview_correct_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textview_question"
            android:textColor="@color/red" />

        <RelativeLayout
            android:id="@+id/layout_A"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textview_correct_rate"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/textview_A_title"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/option_A" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/textview_A_title"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/material_dialog_thumbColor" >

                <TextView
                    android:id="@+id/textview_A_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/textview_A_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_B"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_A"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textview_B_title"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/option_B" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/textview_B_title"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/material_dialog_thumbColor" >

                <TextView
                    android:id="@+id/textview_B_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/textview_B_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_B"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textview_C_title"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/option_C" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/textview_C_title"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/material_dialog_thumbColor" >

                <TextView
                    android:id="@+id/textview_C_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/textview_C_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_D"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_C"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textview_D_title"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/option_D" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/textview_D_title"
                android:scrollbarSize="2dp"
                android:scrollbarThumbVertical="@color/material_dialog_thumbColor" >

                <TextView
                    android:id="@+id/textview_D_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </ScrollView>

            <TextView
                android:id="@+id/textview_D_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/red" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_last"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/last_item" />

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/next_item" />
    </LinearLayout>

</RelativeLayout>