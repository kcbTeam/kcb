<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/common_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_question_index"
            style="@style/common_title" />

        <include layout="@layout/comm_button_delete" />
    </LinearLayout>

    <com.kcb.common.view.QuestionEditView
        android:id="@+id/questioneditview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title" />

</RelativeLayout>