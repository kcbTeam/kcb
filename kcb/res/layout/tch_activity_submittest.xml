<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow" >

        <TextView
            android:id="@+id/textview_test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/editCouseTest"
            android:textSize="@dimen/text_size_large" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/sure_submit" >
        </com.kcb.library.view.buttonflat.ButtonFlat>
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_settime_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:text="@string/settime_hint" />

    <com.kcb.library.slider.Slider
        android:id="@+id/slider_testtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_settime_hint"
        android:layout_marginTop="5dp"
        android:background="#1E88E5"
        materialdesign:max="10"
        materialdesign:min="2"
        materialdesign:showNumberIndicator="true" />

    <TextView
        android:id="@+id/testtimeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider_testtime"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listview_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/testtimeHint"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>