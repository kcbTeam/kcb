<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout_red"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/checkin"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/textview_time"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/textview_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/tip_inputnum"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:id="@+id/linearlayout_shownum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_tip"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_shownum1"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum2"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum3"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum4"
            style="@style/shownum_textview" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkin_recycler_height"
        android:layout_below="@id/linearlayout_shownum"
        android:layout_margin="36dp" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_finish"
        style="@style/common_paper_button"
        android:layout_below="@id/recyclerview"
        widget:paper_text="@string/button_finish"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

    <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar_finish"
        style="@style/SmoothProgressBar"
        android:layout_alignBottom="@id/button_finish"
        android:layout_alignLeft="@id/button_finish"
        android:layout_alignRight="@id/button_finish"
        android:visibility="gone" />

</RelativeLayout>