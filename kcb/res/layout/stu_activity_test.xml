<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <RelativeLayout
        android:id="@+id/relativeLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow" >

        <TextView
            android:id="@+id/textview_testtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/testbtn"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textview_timecounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:textSize="15dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/relativeLayout_header" />

    <TextView
        android:id="@+id/textview_choice_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_recyclerview1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/textview_choice_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_recyclerview1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textview_choice_index"
        android:background="@drawable/stu_checkin_textview"
        android:textColor="@color/black_700"
        android:textSize="@dimen/text_size_medium" />

    <ScrollView
        android:id="@+id/scroll_choices1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_buttons"
        android:layout_below="@id/textview_choice_question"
        android:layout_marginTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativelayout_one"
                style="@style/stu_test_question_interval" >

                <TextView
                    android:id="@+id/textview_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/option_A" />

                <TextView
                    android:id="@+id/textview_choice_a"
                    style="@style/stu_test_questionItem"
                    android:layout_toRightOf="@id/textview_A" />

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkbox_a"
                    style="@style/tch_test_checkbox"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout_two"
                style="@style/stu_test_question_interval"
                android:layout_below="@id/relativelayout_one" >

                <TextView
                    android:id="@+id/textview_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/option_B" />

                <TextView
                    android:id="@+id/textview_choice_b"
                    style="@style/stu_test_questionItem"
                    android:layout_toRightOf="@id/textview_B" />

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkbox_b"
                    style="@style/tch_test_checkbox"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout_three"
                style="@style/stu_test_question_interval"
                android:layout_below="@id/relativelayout_two" >

                <TextView
                    android:id="@+id/textview_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/option_C" />

                <TextView
                    android:id="@+id/textview_choice_c"
                    style="@style/stu_test_questionItem"
                    android:layout_toRightOf="@id/textview_C" />

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkbox_c"
                    style="@style/tch_test_checkbox"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout_four"
                style="@style/stu_test_question_interval"
                android:layout_below="@id/relativelayout_three" >

                <TextView
                    android:id="@+id/textview_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/option_D" />

                <TextView
                    android:id="@+id/textview_choice_d"
                    style="@style/stu_test_questionItem"
                    android:layout_toRightOf="@id/textview_D" />

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkbox_d"
                    style="@style/tch_test_checkbox"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.kcb.library.view.PaperButton
            android:id="@+id/button_previous"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/pre_question" />

        <com.kcb.library.view.PaperButton
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/next_question" />
    </LinearLayout>

</RelativeLayout>