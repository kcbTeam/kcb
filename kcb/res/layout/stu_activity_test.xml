<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_testtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:gravity="center_vertical"
        android:text="@string/testbtn" />

    <TextView
        android:id="@+id/textview_timecounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview_testtitle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/textview_timecounter"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_recyclerview1" >

        <TextView
            android:id="@+id/textview_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="选择题"
            android:textSize="25dp" />

        <ScrollView
            android:id="@+id/scrollview_choice_question"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/textview_choice"
            android:layout_margin="5dp"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/textview_choice_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relativelayout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollview_choice_question"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/textview_choice_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.kcb.library.view.checkbox.CheckBox
                android:id="@+id/checkbox_a"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textview_choice_a"
                android:background="#1E88E5"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout_one"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/textview_choice_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.kcb.library.view.checkbox.CheckBox
                android:id="@+id/checkbox_b"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textview_choice_b"
                android:background="#1E88E5"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout_two"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/textview_choice_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.kcb.library.view.checkbox.CheckBox
                android:id="@+id/checkbox_c"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textview_choice_c"
                android:background="#1E88E5"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout_three"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/textview_choice_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp" />

            <com.kcb.library.view.checkbox.CheckBox
                android:id="@+id/checkbox_d"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textview_choice_d"
                android:background="#1E88E5"
                android:gravity="center" />
        </RelativeLayout>
    </RelativeLayout>

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_previous"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        widget:paper_text="@string/pre_question" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_next"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        widget:paper_text="@string/next_question" />

</RelativeLayout>