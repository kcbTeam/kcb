<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_questionindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/problem_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_questionindex"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="2dp"
        android:padding="4dp"
        android:textColor="@color/black_700"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider0"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_tipa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/option_A"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textview_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_A"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:background="@color/blue"
            android:clickable="false" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_A"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_tipb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/option_B"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textview_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_B"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:background="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_B"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider2"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_tipc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/option_C"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textview_C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_C"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:background="@color/blue" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_C"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_tipd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/option_D"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textview_D"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_size_medium" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_D"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:background="@color/blue" />
    </LinearLayout>

</RelativeLayout>