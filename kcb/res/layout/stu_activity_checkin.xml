<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkin" />

    <TextView
        android:id="@+id/textview_inputnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_checkin"
        android:text="@string/tip_inputnum" />

    <LinearLayout
        android:id="@+id/linearlayout_shownum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_inputnum"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_shownum1"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum2"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum3"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_shownum4"
            style="@style/shownum_textview" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkin_recycler_height"
        android:layout_below="@id/linearlayout_shownum"
        android:layout_margin="@dimen/dp_32" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_finish"
        style="@style/common_button"
        android:layout_below="@id/recyclerview"
        widget:paper_text="@string/button_finish" />

</RelativeLayout>