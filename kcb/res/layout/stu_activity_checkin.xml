<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textview_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkin" />

    <TextView
        android:id="@+id/textview_inputnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_checkin"
        android:text="@string/tip_inputnum" />

    <LinearLayout
        android:id="@+id/linearlayout_shownum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_inputnum"
        android:layout_margin="@dimen/dp_16"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_shownum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/textview_shownum2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/textview_shownum3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/textview_shownum4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_shownum"
        android:layout_margin="@dimen/dp_16" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_finish"
        style="@style/home_button"
        android:layout_below="@id/recyclerview"
        widget:paper_text="@string/button_finish" />

</RelativeLayout>