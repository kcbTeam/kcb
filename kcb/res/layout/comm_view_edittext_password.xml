<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="contentDescription" >

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_password"
        style="@style/common_edittext_password"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/imageview_changeinputtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edittext_password"
        android:layout_alignRight="@id/edittext_password"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_visibility_off_grey600_24dp" />

</RelativeLayout>