<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/testresult_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:orientation="horizontal" >

        <include layout="@layout/comm_back_button" />

        <TextView
            android:id="@+id/testresult_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edittest"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_testresultchioce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testresult_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:text="选择题"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/textview_testresultchioce"
        android:layout_marginRight="16dp" >

        <com.kcb.student.util.RedHookDraw
            android:id="@+id/relativelayout_redhook"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_choice_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_testresultchioce"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/relativelayout_one1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_choice_question1"
        android:layout_margin="16dp" >

        <TextView
            android:id="@+id/textview_choice_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkbox_a1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textview_choice_a1"
            android:background="#1E88E5"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_two1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_one1"
        android:layout_margin="16dp" >

        <TextView
            android:id="@+id/textview_choice_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkbox_b1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textview_choice_b1"
            android:background="#1E88E5"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_three1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_two1"
        android:layout_margin="16dp" >

        <TextView
            android:id="@+id/textview_choice_c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkbox_c1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textview_choice_c1"
            android:background="#1E88E5"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_four1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_three1"
        android:layout_margin="16dp" >

        <TextView
            android:id="@+id/textview_choice_d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkbox_d1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textview_choice_d1"
            android:background="#1E88E5"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonflats1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_tab_question1"
            style="@style/home_tab"
            android:text="@string/question1btn"
            buttonflat:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_tab_question2"
            style="@style/home_tab"
            android:text="@string/question2btn"
            buttonflat:rippleSpeed="18" />
         <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_tab_question3"
            style="@style/home_tab"
            android:text="@string/question3btn"
            buttonflat:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_tab_question4"
            style="@style/home_tab"
            android:text="@string/question4btn"
            buttonflat:rippleSpeed="18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/buttonflats1"
        android:background="@color/divider" />

</RelativeLayout>