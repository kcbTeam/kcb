<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/common_title_layout" >

        <include layout="@layout/comm_back_button" />

        <TextView
            style="@style/common_title"
            android:text="@string/add_newtest" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_looks_one_grey600_24dp" />

    <TextView
        android:id="@+id/textview_setname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step1"
        android:layout_toRightOf="@id/imageview_step1"
        android:text="@string/hellotip1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step1"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_testname"
        style="@style/login_edittext"
        android:layout_below="@id/view_divider1"
        android:hint="@string/testname_hint" />

    <ImageView
        android:id="@+id/imageview_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_testname"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_looks_two_grey600_24dp" />

    <TextView
        android:id="@+id/textview_setnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step2"
        android:layout_toRightOf="@id/imageview_step2"
        android:text="@string/hellotip2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step2"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <com.kcb.library.slider.Slider
        android:id="@+id/slider_testnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edittext_testname"
        android:layout_alignRight="@id/edittext_testname"
        android:layout_below="@id/view_divider2"
        android:layout_marginLeft="-24.5dp"
        android:layout_marginRight="-24.5dp"
        android:background="@color/blue"
        materialdesign:max="9"
        materialdesign:min="1"
        materialdesign:showNumberIndicator="true" />

    <ImageView
        android:id="@+id/imageview_step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider_testnum"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_looks_3_grey600_24dp" />

    <TextView
        android:id="@+id/tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step3"
        android:layout_toRightOf="@id/imageview_step3"
        android:text="点击完成开始出题"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step3"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_finish"
        style="@style/common_paper_button"
        android:layout_below="@id/view_divider3"
        android:layout_centerHorizontal="true"
        widget:paper_text="@string/finish" />

</RelativeLayout>