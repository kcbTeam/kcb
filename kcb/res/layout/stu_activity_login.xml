<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/app_name"
        android:textSize="@dimen/dp_25" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:text="@string/button_login"
        android:textSize="@dimen/dp_25" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_login"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:textSize="@dimen/dp_25" />

    <EditText
        android:id="@+id/edittext_stuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edittext_password"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:hint="@string/hint_stuid"
        android:maxLength="15"
        android:maxLines="1"
        android:textSize="@dimen/dp_25" />

    <ImageView
        android:id="@+id/image_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/edittext_stuid"
        android:layout_below="@id/textview_appname"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>