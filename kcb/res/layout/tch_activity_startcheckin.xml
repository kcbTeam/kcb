<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/signclass"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" />

    <com.kcb.library.view.buttonflat.ButtonFlat
        android:id="@+id/button_giveup"
        android:layout_width="@dimen/top_icon_button_width"
        android:layout_height="@dimen/top_icon_button_height"
        android:layout_alignParentRight="true"
        buttonflat:rippleSpeed="6" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_highlight_remove_black_24dp" />
    </com.kcb.library.view.buttonflat.ButtonFlat>

    <ImageView
        android:id="@+id/textview_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_giveup"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_looks_one_black_24dp"
        android:paddingLeft="16dp" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_getnum"
        style="@style/common_paper_button"
        android:layout_alignTop="@id/textview_step1"
        android:layout_centerHorizontal="true"
        widget:paper_text="@string/getnumber"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tipforteacher1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_getnum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/tipforteacher1" />

    <LinearLayout
        android:id="@+id/linearlayout_showsignnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/button_getnum"
        android:layout_alignRight="@id/button_getnum"
        android:layout_below="@id/tipforteacher1"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_showsignnum1"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_showsignnum2"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_showsignnum3"
            style="@style/shownum_textview" />

        <TextView
            android:id="@+id/textview_showsignnum4"
            style="@style/shownum_textview" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_showsignnum" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/num_2" />

            <com.kcb.library.view.PaperButton
                android:id="@+id/button_start"
                style="@style/common_paper_button"
                android:layout_alignTop="@id/textview_step2"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                widget:paper_text="@string/startsign"
                widget:paper_text_color="@color/black_700"
                widget:paper_text_size="@dimen/text_size_medium" />

            <ProgressBar
                android:id="@+id/ProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_below="@id/button_start"
                android:layout_marginLeft="@dimen/dp_42"
                android:layout_marginRight="90dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textview_timetip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/button_start"
                android:layout_alignTop="@id/ProgressBar"
                android:textSize="10dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_asback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#ffff" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout_start" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_42"
                android:text="@string/num_3" />

            <RelativeLayout
                android:id="@+id/layout_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textview_step3"
                android:layout_centerHorizontal="true" >

                <com.kcb.library.view.PaperButton
                    android:id="@+id/button_rate"
                    style="@style/common_paper_button"
                    widget:paper_text="@string/classrate"
                    widget:paper_text_color="@color/black_700"
                    widget:paper_text_size="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/button_rate"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/classrate_look" />
            </RelativeLayout>

            <com.kcb.library.view.PaperButton
                android:id="@+id/button_finish"
                style="@style/common_paper_button"
                android:layout_below="@id/layout_rate"
                android:layout_centerHorizontal="true"
                widget:paper_text="@string/finish" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_atsback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#ffff" />
    </FrameLayout>

</RelativeLayout>