<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/boder"
    android:gravity="center">
    <com.kcb.library.view.buttonflat.ButtonFlat
        android:id="@+id/modify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/common_top_button"
        buttonflat:rippleSpeed="6"
        android:layout_alignParentTop="true"
        android:text="@string/button_modify" />
    <com.kcb.library.view.buttonflat.ButtonFlat
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/common_top_button"
        buttonflat:rippleSpeed="6"
        android:layout_below="@id/modify_button"
        android:layout_marginTop="0dp"
        android:text="@string/button_exit" />
</RelativeLayout>