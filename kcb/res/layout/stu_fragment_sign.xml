<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:gravity="center" >

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_start_checkin"
        style="@style/home_center_button"
        widget:paper_text="@string/stu_start_checkin"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

    <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar_start_checkin"
        style="@style/SmoothProgressBar"
        android:layout_alignBottom="@id/button_start_checkin"
        android:layout_alignLeft="@id/button_start_checkin"
        android:layout_alignRight="@id/button_start_checkin"
        android:visibility="invisible" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_look_checkin"
        style="@style/home_center_button"
        android:layout_below="@id/progressbar_start_checkin"
        widget:paper_text="@string/stu_look_checkin_result"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

</RelativeLayout>