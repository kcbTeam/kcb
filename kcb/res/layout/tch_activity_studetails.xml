<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_stu_checkinrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_checkinrate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_stu_checkinrate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textview_stu_correctrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textview_stu_checkinrate"
        android:layout_below="@id/piechart_checkinrate"
        android:layout_marginTop="20dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_correctrate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_stu_correctrate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>