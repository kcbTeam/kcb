<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/textview_question_num"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="16dp"
        android:textColor="@color/black_700"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/textview_input_problem_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/problem_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/edittext_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_input_problem_tip"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/stu_checkin_textview"
        android:gravity="top|left"
        android:hint="@string/edit_title_hint"
        android:inputType="none"
        android:lineSpacingExtra="2dp"
        android:lines="7"
        android:padding="8dp"
        android:textColor="@color/black_700"
        android:textColorHint="@color/black_400"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/imageview_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/edittext_question_title"
        android:layout_alignTop="@id/edittext_question_title"
        android:padding="4dp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/input_options_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_question_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:text="@string/options_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <ScrollView
        android:id="@+id/scroll_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_divider"
        android:layout_below="@id/input_options_hint" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/layout_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/option_A"
                    android:textColor="@color/black_700"
                    android:textSize="@dimen/text_size_medium" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edittext_A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stu_checkin_textview"
                        android:hint="@string/edit_title_hint"
                        android:padding="8dp"
                        android:textColor="@color/black_700"
                        android:textColorHint="@color/black_400"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/imageview_delete_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkBox_A"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_A"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/option_B"
                    android:textColor="@color/black_700"
                    android:textSize="@dimen/text_size_medium" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edittext_B"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stu_checkin_textview"
                        android:inputType="none"
                        android:padding="8dp"
                        android:textColor="@color/black_700"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/imageview_delete_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkBox_B"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_B"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/option_C"
                    android:textColor="@color/black_700"
                    android:textSize="@dimen/text_size_medium" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edittext_C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stu_checkin_textview"
                        android:inputType="none"
                        android:padding="8dp"
                        android:textColor="@color/black_700"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/imageview_delete_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkBox_C"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_C"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/option_D"
                    android:textColor="@color/black_700"
                    android:textSize="@dimen/text_size_medium" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/edittext_D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stu_checkin_textview"
                        android:inputType="none"
                        android:padding="8dp"
                        android:textColor="@color/black_700"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/imageview_delete_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <com.kcb.library.view.checkbox.CheckBox
                    android:id="@+id/checkBox_D"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="@color/blue" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_last"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上一题"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下一题"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="增加一题"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除本题"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/layout_buttons"
        android:background="@color/divider" />

</RelativeLayout>