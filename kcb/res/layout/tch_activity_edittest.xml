<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:gravity="center_vertical"
        android:text="@string/edittest" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_delete" />

    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_delete"
        android:background="@drawable/ic_action_user_add"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview_input_problem_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_marginTop="5dp"
        android:text="@string/problem_hint" />

    <TextView
        android:id="@+id/textview_question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textview_title" />

    <EditText
        android:id="@+id/edittext_question"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/textview_input_problem_tip"
        android:layout_marginTop="2dp"
        android:focusable="true"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/input_options_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_question"
        android:text="@string/options_hint" />

    <RelativeLayout
        android:id="@+id/layout_A"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/input_options_hint"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textview_A"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="@string/option_A" />

        <EditText
            android:id="@+id/edittext_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/textview_A"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:maxLines="6" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_A"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#1E88E5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_B"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_A"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textview_B"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:text="@string/option_B" />

        <EditText
            android:id="@+id/edittext_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/textview_B"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:maxLines="6" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_B"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#1E88E5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_C"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_B"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textview_C"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="@string/option_C" />

        <EditText
            android:id="@+id/edittext_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/textview_C"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:maxLines="6" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_C"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#1E88E5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_D"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_C"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textview_D"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="@string/option_D" />

        <EditText
            android:id="@+id/edittext_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/textview_D"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:maxLines="6" />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_D"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#1E88E5" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_D"
        android:layout_marginRight="15dp"
        android:text="@string/select_hint" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_last"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/last_item" />

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            widget:paper_text="@string/next_item" />
    </LinearLayout>

</RelativeLayout>