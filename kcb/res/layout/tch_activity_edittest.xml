<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <!-- TODO delete relativelayout -->
    <RelativeLayout
        android:id="@+id/title_buttonbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/activity_header_shadow" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/edittest" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_action_delete" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_buttonbar"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >
    </FrameLayout>

    <!-- TODO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_last"
            style="@style/bottom_button"
            widget:paper_text="@string/last_item" />

        <com.kcb.library.view.PaperButton
            android:id="@+id/pagerbutton_next"
            style="@style/bottom_button"
            android:layout_alignParentRight="true"
            widget:paper_text="@string/next_item" />
    </RelativeLayout>

</RelativeLayout>