<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/input_problem_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_question_num"
        android:layout_marginTop="5dp"
        android:text="@string/problem_hint" />

    <EditText
        android:id="@+id/edittext_question"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/input_problem_hint"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="6" />

    <TextView
        android:id="@+id/input_options_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_question"
        android:text="@string/options_hint" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/input_options_hint"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/edittext_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:text="A." />

        <com.kcb.library.view.checkbox.CheckBox
            android:id="@+id/checkBox_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#1E88E5" />
    </RelativeLayout>

</RelativeLayout>