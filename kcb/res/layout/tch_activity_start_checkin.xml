<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/tch_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            style="@style/common_title"
            android:text="@string/tch_class_checkin" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/step_tip_margin_top"
        android:background="@drawable/ic_looks_one_grey600_24dp" />

    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_step1"
        android:layout_toRightOf="@id/imageview_step1"
        android:text="@string/tch_tell_stu_checkin_num"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageview_step1"
        android:layout_marginBottom="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/linearlayout_showsignnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider1"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_showsignnum1"
            style="@style/tch_checkin_num" />

        <TextView
            android:id="@+id/textview_showsignnum2"
            style="@style/tch_checkin_num" />

        <TextView
            android:id="@+id/textview_showsignnum3"
            style="@style/tch_checkin_num" />

        <TextView
            android:id="@+id/textview_showsignnum4"
            style="@style/tch_checkin_num" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_showsignnum"
        android:layout_marginTop="36dp" >

        <ImageView
            android:id="@+id/imageview_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_looks_two_grey600_24dp" />

        <TextView
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageview_step2"
            android:layout_toRightOf="@id/imageview_step2"
            android:text="@string/tch_two_min_finish_checkin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/imageview_step2"
            android:layout_marginBottom="16dp"
            android:background="@color/black_divider" />

        <com.kcb.library.view.PaperButton
            android:id="@+id/button_start"
            style="@style/common_paper_button"
            android:layout_below="@id/view_divider2"
            android:layout_centerHorizontal="true"
            widget:paper_text="@string/tch_start"
            widget:paper_text_color="@color/black_700"
            widget:paper_text_size="@dimen/text_size_medium" />

        <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
            android:id="@+id/progressbar_start"
            style="@style/SmoothProgressBar"
            android:layout_alignBottom="@id/button_start"
            android:layout_alignLeft="@id/button_start"
            android:layout_alignRight="@id/button_start"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>