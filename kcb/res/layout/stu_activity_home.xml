<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <TextView
        android:id="@+id/textview_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:text="@string/app_name" />

    <com.kcb.library.view.buttonflat.ButtonFlat
        android:id="@+id/button_exit"
        style="@style/common_top_button"
        android:layout_alignParentRight="true"
        android:text="@string/destroy"
        buttonflat:rippleSpeed="6" />

    <fragment
        android:id="@+id/fragment_checkin"
        android:name="com.kcb.student.fragment.CheckInFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_exit" />

    <fragment
        android:id="@+id/fragment_test"
        android:name="com.kcb.student.fragment.TestFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_exit" />

    <LinearLayout
        android:id="@+id/buttonflats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_checkin"
            style="@style/home_tab"
            android:text="@string/signbtn"
            buttonflat:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_test"
            style="@style/home_tab"
            android:text="@string/testbtn"
            buttonflat:rippleSpeed="18" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/buttonflats"
        android:background="@color/divider" />

</RelativeLayout>