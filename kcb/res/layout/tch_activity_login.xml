<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/common_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_appname"
            style="@style/common_title"
            android:text="@string/tch_tch_login" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_id"
        style="@style/login_edittext_id"
        android:layout_below="@id/imageview_login"
        android:hint="@string/tch_account" />

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_password"
        style="@style/login_edittext_password"
        android:layout_below="@id/edittext_id"
        android:hint="@string/tch_password" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_login"
        style="@style/common_paper_button"
        android:layout_below="@id/edittext_password"
        widget:paper_text="@string/tch_login"
        widget:paper_text_color="@color/black_700"
        widget:paper_text_size="@dimen/text_size_medium" />

    <com.kcb.library.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/progressbar_login"
        style="@style/SmoothProgressBar"
        android:layout_alignBottom="@id/button_login"
        android:layout_alignLeft="@id/button_login"
        android:layout_alignRight="@id/button_login"
        android:visibility="gone" />

</RelativeLayout>