<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:fitsSystemWindows="true"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/stu_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_test_name_num"
            style="@style/common_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_divider"
        android:layout_below="@id/layout_title" >

        <com.kcb.common.view.test.ShowQuestionView
            android:id="@+id/questionview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_200"
        android:orientation="horizontal" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_last"
            style="@style/common_bottom_button"
            android:text="@string/stu_last_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_next"
            style="@style/common_bottom_button"
            android:text="@string/stu_next_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        style="@style/common_divider"
        android:layout_above="@id/layout_buttons" />

</RelativeLayout>