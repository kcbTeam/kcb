<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:buttonflat="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        style="@style/common_title_layout" >

        <include layout="@layout/comm_button_back" />

        <TextView
            android:id="@+id/textview_test_name_num"
            style="@style/common_title" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_question_index"
        style="@style/common_tip"
        android:layout_below="@id/layout_title" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_question_index"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="2dp"
        android:padding="4dp"
        android:textColor="@color/black_700"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:id="@+id/view_divider0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textview_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_A"
        style="@style/tch_test_settime_choice_layout"
        android:layout_below="@id/view_divider0"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp" >

        <TextView
            android:id="@+id/textview_tipa"
            style="@style/tch_test_settime_choice_tip"
            android:text="@string/tch_choice_A" />

        <TextView
            android:id="@+id/textview_A"
            style="@style/tch_test_settime_choice" />

        <ImageView
            android:id="@+id/checkBox_A"
            style="@style/tch_test_settime_checkicon"
            android:layout_margin="4dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_A"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_B"
        style="@style/tch_test_settime_choice_layout"
        android:layout_below="@id/view_divider1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp" >

        <TextView
            android:id="@+id/textview_tipb"
            style="@style/tch_test_settime_choice_tip"
            android:text="@string/tch_choice_B" />

        <TextView
            android:id="@+id/textview_B"
            style="@style/tch_test_settime_choice" />

        <ImageView
            android:id="@+id/checkBox_B"
            style="@style/tch_test_settime_checkicon"
            android:layout_margin="4dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_B"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_C"
        style="@style/tch_test_settime_choice_layout"
        android:layout_below="@id/view_divider2"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp" >

        <TextView
            android:id="@+id/textview_tipc"
            style="@style/tch_test_settime_choice_tip"
            android:text="@string/tch_choice_C" />

        <TextView
            android:id="@+id/textview_C"
            style="@style/tch_test_settime_choice" />

        <ImageView
            android:id="@+id/checkBox_C"
            style="@style/tch_test_settime_checkicon"
            android:layout_margin="4dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_C"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_divider" />

    <LinearLayout
        android:id="@+id/layout_D"
        style="@style/tch_test_settime_choice_layout"
        android:layout_below="@id/view_divider3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp" >

        <TextView
            android:id="@+id/textview_tipd"
            style="@style/tch_test_settime_choice_tip"
            android:text="@string/tch_choice_D" />

        <TextView
            android:id="@+id/textview_D"
            style="@style/tch_test_settime_choice" />

        <ImageView
            android:id="@+id/checkBox_D"
            style="@style/tch_test_settime_checkicon"
            android:layout_margin="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp" >

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_last"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/stu_last_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/stu_next_question"
            widget:clickAfterRipple="false"
            widget:rippleSpeed="18" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/layout_buttons"
        android:background="@color/divider" />

</RelativeLayout>