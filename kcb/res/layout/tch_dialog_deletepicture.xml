<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000" >

    <RelativeLayout
        android:id="@+id/contentDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:background="#fff"
        android:paddingBottom="16dp"
        android:paddingTop="24dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_rebackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:text="@string/rebackground" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_deletebackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_rebackground"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:text="@string/deletebackground" />

        <com.kcb.library.view.buttonflat.ButtonFlat
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/button_deletebackground"
            android:layout_marginRight="16dp"
            android:background="#1E88E5"
            android:text="@string/cancel" />
    </RelativeLayout>

</RelativeLayout>
