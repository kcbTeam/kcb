<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:orientation="horizontal" >

        <include layout="@layout/comm_back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add_newtest" />
    </LinearLayout>

    <TextView
        android:id="@+id/edittext_hellotip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_margin="16dp"
        android:text="@string/hellotip1" />

    <com.kcb.library.view.FloatingEditText
        android:id="@+id/edittext_testname"
        style="@style/login_edittext"
        android:layout_below="@id/edittext_hellotip1"
        android:hint="@string/testname" />

    <TextView
        android:id="@+id/edittext_hellotip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_testname"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/hellotip2" />

    <TextView
        android:id="@+id/edittext_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/edittext_testname"
        android:layout_alignTop="@id/edittext_hellotip2" />

    <com.kcb.library.slider.Slider
        android:id="@+id/sliderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_hellotip2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        materialdesign:max="9"
        materialdesign:min="1"
        materialdesign:showNumberIndicator="true" />

    <com.kcb.library.view.PaperButton
        android:id="@+id/button_editfinish"
        style="@style/common_paper_button"
        android:layout_below="@id/sliderNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        widget:paper_text="@string/finish" />

</RelativeLayout>