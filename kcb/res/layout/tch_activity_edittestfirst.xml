<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:ignore="contentDescription" >

   <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_header_shadow"
        android:orientation="horizontal" >

        <include layout="@layout/comm_back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edittest" />
    </LinearLayout> 
    

    <TextView
        android:id="@+id/edittext_helloteacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="40dp"
        android:text="@string/helloteacher" />

    <TextView
        android:id="@+id/edittext_hellotip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_helloteacher"
        android:layout_marginTop="40dp"
        android:text="@string/hellotip1" />

    <EditText
        android:id="@+id/edittext_testname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/edittext_hellotip1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/edittext_hellotip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_testname"
        android:layout_marginTop="20dp"
        android:text="@string/hellotip2" />

    <SeekBar
        android:id="@+id/SeekBar_questionnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_hellotip2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="9"
        android:progress="9" />
    
     <com.kcb.library.view.PaperButton
        android:id="@+id/button_editfinish"
        style="@style/common_paper_button"
        android:layout_below="@id/SeekBar_questionnum"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        widget:paper_text="@string/finish" />

</RelativeLayout>