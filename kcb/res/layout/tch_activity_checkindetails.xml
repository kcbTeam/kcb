<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin_result"
            android:textSize="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_attendance_rate_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textview_attendance_rate_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/piechart"
        android:layout_marginTop="20dp"
        android:text="@string/checkin_missed_hint" />

    <RelativeLayout
        android:id="@+id/table_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/gray" >

        <TextView
            style="@style/tch_listtitle_textview"
            android:layout_gravity="left"
            android:text="@string/stu_id" />

        <TextView
            style="@style/tch_listtitle_textview"
            android:layout_centerHorizontal="true"
            android:text="@string/stu_name" />

        <TextView
            style="@style/tch_listtitle_textview"
            android:layout_alignParentRight="true"
            android:text="@string/miss_checkin_times" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_not_ckeckin_stu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >
    </ListView>

</RelativeLayout>