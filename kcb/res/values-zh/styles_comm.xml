<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ********** Application theme. ********** -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>
    <!-- ********** Application theme. ********** -->


    <!-- **************************************** 公共模块 Start **************************************** -->
    <!-- **************************************** 公共模块  Start **************************************** -->
    <!-- ********** 基本组件 start ********** -->
    <!-- 顶部标题栏中的文字（有返回按钮） -->
    <style name="common_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 顶部标题栏中靠最左边的文字（无返回按钮） -->
    <style name="common_title_left" parent="@style/common_title">
        <item name="android:paddingLeft">16dp</item>
    </style>
    <!-- 顶部标题栏中的图标布局 -->
    <style name="common_title_icon_layout">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">@dimen/activity_header_height</item>
    </style>
    <!-- 顶部标题栏中的图标 -->
    <style name="common_title_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!-- 顶部标题栏下的进度条 -->
    <style name="common_title_progressbar" parent="@style/SmoothProgressBar">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">-7dp</item>
    </style>
    <!-- 普通文字提示 -->
    <style name="common_tip_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 空文案提示控件 -->
    <style name="common_empty_tip_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- 线 -->
    <style name="common_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_divider</item>
    </style>
    <!-- 普通的纸质按钮 -->
    <style name="common_paper_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>
    <!-- 大号的纸质按钮 -->
    <style name="common_paper_button_big" parent="@style/common_paper_button">
        <item name="android:layout_height">64dp</item>
    </style>
    <!-- 普通输入框 -->
    <style name="common_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/comm_text_cursor</item>
    </style>
    <!-- 密码输入框 -->
    <style name="common_edittext_password" parent="@style/common_edittext">
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- 复选框 -->
    <style name="common_checkbox">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@color/blue</item>
    </style>
    <!-- 顶部/底部有多个按钮的布局 -->
    <style name="common_bottom_button_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/black_200</item>
    </style>
    <!-- 顶部/底部的多个按钮 -->
    <style name="common_bottom_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- ********** 基本组件 end ********** -->


    <!-- ********** 侧边栏 start ********** -->
    <!-- 每一项 -->
    <style name="common_drawer_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!-- 每一项中的图片 -->
    <style name="common_drawer_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <!-- 每一项中的文字 -->
    <style name="common_drawer_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- ********** 侧边栏 end ********** -->


    <!-- ********** 主页 start ********** -->
    <!-- 上方中部显示tab的文字 -->
    <style name="common_center_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_x_large</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 下方的tab -->
    <style name="common_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 下方tab中的图片 -->
    <style name="common_tab_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- 下方tab中的文字 -->
    <style name="common_tab_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- ********** 主页 end ********** -->


    <!-- ********** 显示题目 start ********** -->
    <!-- 选项的布局 -->
    <style name="common_question_show_choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 选项的提示，A，B，C，D -->
    <style name="common_question_show_choice_tip">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 显示选项文字 -->
    <style name="common_question_show_choice_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 显示选项图片 -->
    <style name="common_question_show_choice_imageview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- 显示选项的答案选择框 -->
    <style name="common_question_show_choice_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
    </style>
    <!-- ********** 显示题目 end ********** -->
    <!-- **************************************** 公共模块  End **************************************** -->
    <!-- **************************************** 公共模块  End **************************************** -->

</resources>