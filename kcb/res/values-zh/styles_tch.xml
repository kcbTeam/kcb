<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- **************************************** 老师模块 Start **************************************** -->
    <!-- **************************************** 老师模块 Start **************************************** -->
    <!-- activity 的顶部标题栏 -->
    <style name="tch_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tch_activity_header</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- StartCheckIn start -->
    <!-- 显示4个签到数字 -->
    <style name="tch_checkin_num">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:background">@drawable/comm_rectangle</item>
    </style>
    <!-- StartCheckIn end -->


    <!-- Edit Question View start -->
    <!-- 选项的布局 -->
    <style name="tch_question_edit_choice_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 选项的提示，A，B，C，D -->
    <style name="tch_question_edit_choice_tip">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 包括输入框、图片、删除图标 -->
    <style name="tch_question_edit_choice_inputlayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/comm_rectangle</item>
    </style>
    <!-- 输入框 -->
    <style name="tch_question_edit_choice_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/comm_rectangle</item>
        <item name="android:textCursorDrawable">@drawable/comm_text_cursor</item>
    </style>
    <!-- 图片 -->
    <style name="tch_question_edit_choice_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- 选择框 -->
    <style name="tch_question_edit_choice_checkbox">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/blue</item>
    </style>
    <!-- Edit Question View end -->
    <!-- **************************************** 老师模块 End **************************************** -->
    <!-- **************************************** 老师模块 End **************************************** -->

</resources>