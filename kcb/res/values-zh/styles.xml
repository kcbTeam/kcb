<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ********** Application theme. ********** -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>
    <!-- ********** Application theme. ********** -->


    <!-- **************************************** Common module Start **************************************** -->
    <!-- ********** Common start ********** -->
    <style name="common_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/activity_header</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="common_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="common_title_left" parent="@style/common_title">
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="common_title_icon_layout">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">@dimen/activity_header_height</item>
    </style>

    <style name="common_title_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="common_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="common_empty_tip_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="common_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_divider</item>
    </style>

    <style name="common_paper_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="common_bottom_button_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="common_bottom_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- ********** Common end ********** -->


    <!-- ********** Login start ********** -->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="login_edittext_id" parent="@style/login_edittext">
        <item name="android:inputType">text</item>
    </style>

    <style name="login_edittext_password" parent="@style/login_edittext">
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- ********** Login start ********** -->


    <!-- ********** Home start ********** -->
    <style name="home_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_x_large</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_tab_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="home_tab_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_center_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="home_popupwindow_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_100</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="home_popupwindow_item_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">""</item>
    </style>

    <style name="home_popupwindow_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="home_popupwindow_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_700</item>
    </style>
    <!-- ********** Home end ********** -->
    <!-- **************************************** Common module End **************************************** -->


    <!-- **************************************** Student module Start **************************************** -->
    <!-- ********** CheckIn start ********** -->
    <style name="shownum_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/comm_rectangle</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_700</item>
    </style>
    <!-- ********** CheckIn end ********** -->


    <!-- ********** Test start ********** -->
    <style name="stu_question_answer_choice_checkbox">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@color/blue</item>
    </style>
    <!-- ********** Test end ********** -->
    <!-- **************************************** Student module End **************************************** -->


    <!-- **************************************** Teacher module Start **************************************** -->
    <!-- StartCheckIn start -->
    <!-- 4个签到数字 -->
    <style name="tch_checkin_num">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/comm_rectangle</item>
    </style>
    <!-- StartCheckIn end -->


    <!-- EditTestActivity start -->
    <!-- 选项的布局 -->
    <style name="tch_question_edit_choice_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 选项的提示，A，B，C，D -->
    <style name="tch_question_edit_choice_tip">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 包括输入框、图片、删除图标 -->
    <style name="tch_question_edit_choice_inputlayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/comm_rectangle</item>
    </style>
    <!-- 输入框 -->
    <style name="tch_question_edit_choice_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/comm_rectangle</item>
    </style>
    <!-- 图片 -->
    <style name="tch_question_edit_choice_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- 删除图标 -->
    <style name="tch_question_edit_delete_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_remove_circle_grey600_24dp</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!-- 选择框 -->
    <style name="tch_question_edit_choice_checkbox">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/blue</item>
    </style>
    <!-- EditTestActivity end -->


    <!-- Common Question Show start -->
    <!-- 选项的布局 -->
    <style name="tch_question_show_choice_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 选项的提示，A，B，C，D -->
    <style name="tch_question_show_choice_tip">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 显示选项文字 -->
    <style name="tch_question_show_choice_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- 显示选项图片 -->
    <style name="tch_question_show_choice_imageview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- 显示选项的答案选择框 -->
    <style name="tch_question_show_choice_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
    </style>
    <!-- Common Question Show end -->
    <!-- **************************************** Teacher module End **************************************** -->

</resources>