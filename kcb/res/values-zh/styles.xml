<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- Login start -->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="login_edittext_id" parent="@style/login_edittext">
        <item name="android:inputType">text</item>
    </style>
    <style name="login_edittext_password" parent="@style/login_edittext">
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- Login start -->


    <!-- Home start -->
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_center_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>
    <!-- Home end -->


    <!-- CheckIn start -->
    <style name="shownum_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/stu_checkin_textview</item>
    </style>
    <!-- CheckIn end -->


    <!-- Common start -->
    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="common_top_button">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="common_top_longtext_button" parent="@style/common_top_button">
        <item name="android:layout_width">90dp</item>
    </style>
    <!-- Common end -->


    <!-- Tch start -->
    <style name="bottom_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">54dp</item>
    </style>
    <!-- Tch end -->

</resources>