<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ********** Application theme. ********** -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>
    <!-- ********** Application theme. ********** -->


    <!-- **************************************** Common module Start **************************************** -->
    <!-- ********** Common start ********** -->
    <style name="common_paper_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <style name="common_top_button">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="common_top_longtext_button" parent="@style/common_top_button">
        <item name="android:layout_width">90dp</item>
    </style>
    <!-- ********** Common end ********** -->


    <!-- ********** Login start ********** -->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="login_edittext_id" parent="@style/login_edittext">
        <item name="android:inputType">text</item>
    </style>

    <style name="login_edittext_password" parent="@style/login_edittext">
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- ********** Login start ********** -->


    <!-- ********** Home start ********** -->
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_center_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
    </style>

    <!-- ********** Home end ********** -->
    <!-- **************************************** Common module End **************************************** -->


    <!-- **************************************** Student module Start **************************************** -->
    <!-- ********** CheckIn start ********** -->
    <style name="shownum_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/stu_checkin_textview</item>
    </style>
    <!-- ********** CheckIn end ********** -->
    <!-- **************************************** Student module End **************************************** -->


    <!-- **************************************** Teacher module End **************************************** -->


    <!-- StartCheckIn start -->
    <style name="tch_checkin_num">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/stu_checkin_textview</item>
    </style>

    <!-- StartCheckIn end -->
    <!-- **************************************** Teacher module End **************************************** -->

    <style name="edittest_edittext_problem">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">10</item>
        <item name="android:lines">10</item>
    </style>

</resources>