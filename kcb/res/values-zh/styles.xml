<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- Login start -->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/login_edittext_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_edittext_horizontal_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
    </style>

    <style name="login_edittext_id" parent="@style/login_edittext">
        <item name="android:inputType">text</item>
    </style>

    <style name="login_edittext_password" parent="@style/login_edittext">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
    </style>
    <!-- Login start -->


    <!-- Home start -->
    <style name="home_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_tab_height</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_button_height</item>
        <item name="android:layout_marginRight">@dimen/home_button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/home_button_horizontal_margin</item>
    </style>
    <!-- Home end -->

</resources>